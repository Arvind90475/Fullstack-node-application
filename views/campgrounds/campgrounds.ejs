<%- include('../partials/header') %>
<div class="container">
    <header class="jumbotron">
            <h1>Welcome To YelPcamp!</h1>
            <p class="lead">View our hand-picked campgrounds from all over the world</p> 
            <p>
                <a class="btn btn-info" href="/campgrounds/new">Add New Campground</a>
            </p>   
    </header>

    <div class="row text-center">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-sm-6 col-md-3 my-3">
                <div class="card">
                    <img src="<%= campground.image %>" alt="camps" class="card-img-top img-fluid" >
                    <div class="card-title">
                        <h4><%= campground.name %></h3>  
                    </div>
                    <a class="show-btn btn btn-info" href="/campgrounds/<%= campground._id %>">More Info</a>
                </div>
            </div>
        <% }); %>
    </div>
</div>





<%- include('../partials/footer') %>